{
  "name": "get_new_hires",
  "description": "Return hires whose hire_date is within the inclusive date range. If start_date or end_date is null, defaults to today.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "start_date": { "type": ["string", "null"], "description": "YYYY-MM-DD. Defaults to today if null." },
      "end_date": { "type": ["string", "null"], "description": "YYYY-MM-DD. Defaults to today if null." }
    },
    "required": [],
    "additionalProperties": false
  },
  "outputSchema": {
    "type": "array",
    "items": { "$ref": "#/$defs/Employee" },
    "$defs": {
      "Employee": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "dept": { "type": "string" },
          "role": { "type": "string" },
          "status": { "type": "string" },
          "hire_date": { "type": "string" },
          "manager": { "type": "string" },
          "slack_id": { "type": "string" },
          "manager_slack_id": { "type": "string" }
        },
        "required": ["id", "name", "dept", "role", "status", "hire_date", "manager", "slack_id", "manager_slack_id"],
        "additionalProperties": false
      }
    }
  },
  "errors": [
    {
      "type": "ValueError",
      "when": "start_date or end_date is not in YYYY-MM-DD format"
    }
  ]
}

