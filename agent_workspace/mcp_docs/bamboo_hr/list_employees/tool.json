{
  "name": "list_employees",
  "description": "List all employees, optionally filtered by status.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "status": {
        "type": ["string", "null"],
        "description": "If provided, only return employees with exact matching status."
      }
    },
    "required": [],
    "additionalProperties": false
  },
  "outputSchema": {
    "type": "array",
    "items": { "$ref": "#/$defs/Employee" },
    "$defs": {
      "Employee": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "dept": { "type": "string" },
          "role": { "type": "string" },
          "status": { "type": "string" },
          "hire_date": { "type": "string", "description": "YYYY-MM-DD" },
          "manager": { "type": "string", "description": "Manager name (not an object)." },
          "slack_id": { "type": "string" },
          "manager_slack_id": { "type": "string" }
        },
        "required": ["id", "name", "dept", "role", "status", "hire_date", "manager", "slack_id", "manager_slack_id"],
        "additionalProperties": false
      }
    }
  },
  "errors": []
}

