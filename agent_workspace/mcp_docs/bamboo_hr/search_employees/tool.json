{
  "name": "search_employees",
  "description": "Search employees by partial match against name, dept, or role (case-insensitive).",
  "inputSchema": {
    "type": "object",
    "properties": {
      "query": { "type": "string", "description": "Search query string." }
    },
    "required": ["query"],
    "additionalProperties": false
  },
  "outputSchema": {
    "type": "array",
    "items": { "$ref": "#/$defs/Employee" },
    "$defs": {
      "Employee": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "name": { "type": "string" },
          "dept": { "type": "string" },
          "role": { "type": "string" },
          "status": { "type": "string" },
          "hire_date": { "type": "string" },
          "manager": { "type": "string" },
          "slack_id": { "type": "string" },
          "manager_slack_id": { "type": "string" }
        },
        "required": ["id", "name", "dept", "role", "status", "hire_date", "manager", "slack_id", "manager_slack_id"],
        "additionalProperties": false
      }
    }
  },
  "errors": []
}

