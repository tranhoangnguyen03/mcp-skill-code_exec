{
  "name": "update_employee",
  "description": "Update selected employee fields. Only dept, role, status, manager, slack_id, manager_slack_id are accepted.",
  "inputSchema": {
    "type": "object",
    "properties": {
      "employee_id": { "type": "integer" },
      "updates": {
        "type": "object",
        "properties": {
          "dept": { "type": "string" },
          "role": { "type": "string" },
          "status": { "type": "string" },
          "manager": { "type": "string" },
          "slack_id": { "type": "string" },
          "manager_slack_id": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "required": ["employee_id", "updates"],
    "additionalProperties": false
  },
  "outputSchema": { "$ref": "#/$defs/Employee" },
  "$defs": {
    "Employee": {
      "type": "object",
      "properties": {
        "id": { "type": "integer" },
        "name": { "type": "string" },
        "dept": { "type": "string" },
        "role": { "type": "string" },
        "status": { "type": "string" },
        "hire_date": { "type": "string" },
        "manager": { "type": "string" },
        "slack_id": { "type": "string" },
        "manager_slack_id": { "type": "string" }
      },
      "required": ["id", "name", "dept", "role", "status", "hire_date", "manager", "slack_id", "manager_slack_id"],
      "additionalProperties": false
    }
  },
  "errors": [
    {
      "type": "ValueError",
      "when": "employee_id does not exist"
    }
  ]
}

